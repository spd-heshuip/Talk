<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/basicPaddingSize"
              android:background="@color/white"
        >
        <com.example.shuip.talk.widget.ClearEditText
                android:id="@+id/etxtEmail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/icon_reg_name"
                style="@style/editText"
                android:hint="@string/hint_login_email"/>
        <com.example.shuip.talk.widget.ClearEditText

                android:id="@+id/etxtPwd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/icon_reg_password"
                android:layout_marginTop="20dp"
                android:inputType="textPassword"
                style="@style/editText"
                android:hint="@string/hint_login_pwd"/>



    <Button
            android:id="@+id/btnLogin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            style="@style/bigGreenButton"
            android:text="@string/login"
            android:onClick="login"
            />


   <TextView

           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="200dp"
           android:text="使用菜鸟窝账号登陆，如无账号，请到网站上注册：http://www.cniao5.com"
           />

</LinearLayout>
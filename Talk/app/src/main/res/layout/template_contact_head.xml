<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
        >



    <RelativeLayout
            android:id="@+id/layoutNewFriend"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/selector_list_item"
            android:gravity="center_vertical">

        <ImageView
                android:id="@+id/imageviewNewFriend"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_addfriend_contact"
                />


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageviewNewFriend"
                android:layout_marginLeft="10dp"
                android:text="@string/friend_new"
                android:textSize="16sp"
                android:textColor="@color/text_title"
                />



        <TextView
                android:id="@+id/txtBadge"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_badge"
                android:layout_alignParentRight="true"
                android:layout_gravity="top|right"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:visibility="gone"

                />



    </RelativeLayout>


    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:padding="5dp"
            android:background="@drawable/selector_list_item"
            android:gravity="center_vertical">

        <ImageView
                android:id="@+id/imageviewFriendOfficial"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_addfriend_official"
                />


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageviewFriendOfficial"
                android:layout_marginLeft="10dp"
                android:text="@string/friend_daniu"
                android:textSize="16sp"
                android:textColor="@color/text_title"
                />



    </RelativeLayout>

</LinearLayout>